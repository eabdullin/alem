{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,
    "allowJs": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@/App": [
        "src/renderer/App.tsx"
      ],
      "@/lib/*": [
        "src/renderer/shared/lib/*"
      ],
      "@/components/*": [
        "src/renderer/shared/components/*"
      ],
      "@/hooks/*": [
        "src/renderer/shared/hooks/*"
      ],
      "@/services/*": [
        "src/renderer/services/*"
      ],
      "@/types/*": [
        "src/renderer/shared/types/*"
      ],
      "@/stores/*": [
        "src/renderer/stores/*"
      ],
      "@/templates/*": [
        "templates/*"
      ],
      "@/styles/*": [
        "styles/*"
      ],
      "@/constants/*": [
        "src/renderer/shared/constants/*"
      ],
      "@/tools": [
        "src/renderer/agent/tools/index.ts"
      ],
      "@/tools/*": [
        "src/renderer/agent/tools/*"
      ],
      "@/mocks/*": [
        "src/renderer/mocks/*"
      ],
      "@/utils/*": [
        "src/renderer/shared/utils/*"
      ],
      "@/electron/*": [
        "src/main/*"
      ],
      "@/shared/*": [
        "src/shared/*"
      ],
      "@/features/*": [
        "src/renderer/features/*"
      ]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "dist-electron",
    ""
  ]
}
